{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@constants/*": [
                "./src/constants/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@views/*": [
                "./src/views/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "@graphiql-explorer/*": [
                "./src/graphiql-explorer/*"
            ]
        }
    },
    "include": [
        "./src"
    ]
}
